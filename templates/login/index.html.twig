{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="mx-40 my-64 items-center justify-center flex ">
    <form action="{{ path('app_login') }}" method="post" class="bg-red-500/70 border-[1px] border-black p-4">
     <div class="grid grid-cols-2">
    <div class="flex flex-col items-center justify-center text-center mx-2">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"class="border-[1px] border-black">
    </div>
    <div class="flex flex-col items-center justify-center text-center mx-2">
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" class="border-[1px] border-black">
    </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
     </div>
    <div class="flex items-center justify-center">
    <a href="http://localhost:8000/">
        <button type="submit" class="bg-white  border-[1px] border-black px-2 my-4">login</button>
    </a> 

    </form>
</div>
{% endblock %}